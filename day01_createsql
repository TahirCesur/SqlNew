-- Yorum olusturma icin cift cizgi kullaniliyor...

--Tablo Olusturma...

CREATE TABLE student(
id CHAR(4),
name VARCHAR(20),
age NUMBER -- son veri oldugu icin virgule gerek yok...
);

--Veri Girisi...

INSERT INTO student VALUES('1001','MEHMET ALA',25);
INSERT INTO student VALUES('1002','AYSE',12);

--Tabloyu Gorme Komutu...
SELECT * FROM student;

--Tablo Silme

DROP TABLE student;

--Parcali Veri Girisi...
INSERT INTO student (id,name) VALUES('1003','FATMA');

SELECT * FROM student;

--Veri tabaninizda urunler adinda bir tablo olusturunuz...
--urun_id =>number
--urun_name =>VARCHAR(50)
--fiyat => number
--(100,cips,5)
--(200,kola,6

CREATE TABLE urunler(
urun_id NUMBER,
urun_name VARCHAR(50),
fiyat NUMBER
);

INSERT INTO urunler VALUES(100,'cips',5);
INSERT INTO urunler VALUES(200,'kola',6);

SELECT * FROM urunler;

DROP TABLE urunler;